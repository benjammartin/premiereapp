<%= tinymce %>
<%= simple_form_for(@cgv) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :article %>
    <%= f.text_area :body, :class => "tinymce", :rows => 20, :cols => 60 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

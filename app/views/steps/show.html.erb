  <div class="row">
      <div class="blogcontent">
<br/>
<div id="wistia_<%= @step.video %>" class="wistia_embed" style="width:1170px;height:660px;">&nbsp;</div>
<script charset="ISO-8859-1" src="//fast.wistia.com/assets/external/E-v1.js"></script>
<script>
/*<![CDATA[*/
    wistiaEmbed = Wistia.embed("<%= @step.video %>", {
      videoFoam: true
    });
  /*]]*/
</script>



<br/>
<h2>
  <%= @step.name %>
  <%= link_to("Continuer", @step.next_step, {:class => 'btn btn-primary btn-lg'}) if @step.next_step %>
</h2>
<br/>
<ul class="nav nav-tabs" data-tabs="tabs">
  <li class="active">
    <a data-toggle="tab" href="#lesson">Lesson</a>
  </li>
  <li>

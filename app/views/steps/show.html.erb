  </li>
  <li>
    <a data-toggle="tab" href="#aide">Aide</a>
  </li>
</ul>
<div class="tab-content">
  <div class="tab-pane active" id="lesson">
    <p></p>
    <%= raw @step.description %>
  </div>
  <div class="tab-pane" id="support">
    <p></p>
    <%= render 'disq', :locals => { title: @step.name } %>

  </div>
  <div class="tab-pane" id="aide">
    <p></p>
    <%= raw @step.aide %>
  </div>
</div>

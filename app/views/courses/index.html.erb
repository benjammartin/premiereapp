<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <div class="page-header">
        <h6>Hello <small>
          <%= @current_user.name %></small>
        </h6>
      </div>
    </div>
  </div>
    <br>
      <div class="blogcontent">
        <% for topic in @topics %>
        <strong> 
          <div class="panel panel-default">
            <div class="panel-heading"><%= topic.name %>
            </div>
          </strong>
          <ul class="list-group">
            <% for step in topic.steps %>
            <li class="list-group-item">
              <%= link_to step.name, step %>
              <p>
                
              </p>
            </li>
            <% end %>
          </ul>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



<div class="container">
  <div class="row sinfo">
     <%= render 'devise/registrations/col' %>
<div class="col-lg-8">
<% content_for :head do %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
<% end %>
<div class="panel panel-default">
<div class="panel-heading"><h2>Inscription </h2></div>
<div class="panel-body">
<div id="stripe_error" class="alert alert-error" style="display:none" >
</div>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'card_form form-vertical' }) do |f| %>
<%= f.error_notification %>
  <legend>
  <h3>Créez votre compte </h3>
   </legend>
  <%= hidden_field_tag 'product', params[:product] %>
  <%= display_base_errors resource %>
   <div class="field">
    <%= label_tag :name, "Votre prénom :" %>
  <%= f.text_field :name, :autofocus => true, class: "form-control" %>
  <%= label_tag :email, "Votre adresse e-mail :" %>
  <%= f.text_field :email, :required => true, class: "form-control" %>
  <%= label_tag :password, "Entrez votre mot de passe :" %>
  <%= f.text_field :password, :required => true, class: "form-control"  %>
  <%= label_tag :password, "Confirmez :" %>
  <%= f.text_field :password_confirmation, :required => true, class: "form-control" %>
    <%= label_tag :coupon, "Si vous avez un coupon de reduction :" %>
  <%= f.text_field :coupon, :required => true, class: "form-control" %>
    </div> 
  <% if @user.stripe_token %>
    <p>Credit card acceptance is pending.</p>
  <% else %>
  <legend>
     <br>
      <h3>Paiement sécurisé par carte bancaire</h3>
    </legend>
    <p class="lead">
      <strong><span class="price">
    
      </span></strong>
    </p>
    <div class="cc-icons">
          <%= image_tag "cb.png" %>&nbsp;<%= image_tag "mastercard.png" %>&nbsp;<%= image_tag "am.png" %>&nbsp;<%= image_tag "visa.png" %>

    </div>
    <br>
    <div class="field">
      <%= label_tag :card_number, "Numéro de carte :" %>
      <%= text_field_tag :card_number, nil, name: nil, class: "form-control"  %>
    </div>
    <div class="field">
      <%= label_tag :card_code, "Cryptogramme visuel :" %>
      <%= text_field_tag :card_code, nil, name: nil, class: "form-control" %>
    </div>
    <div class="field">
      <%= label_tag :card_month, "Date d'expiration :" %>
      <div class="form-inline">
      <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month", class: "form-control"} %>
      <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+10}, {name: nil, id: "card_year", class: "form-control"}%>
    </div>

    </div>
 <br>
  <% end %>
  <%= f.hidden_field :stripe_token %>
  <%= f.submit "Valider", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
</div>
  <div class="panel-footer">En créant votre compte, vous acceptez l'intégralité de nos Conditions générales de vente, notre Politique de gestion de Vos informations personnelles et notre Politique Cookies et publicité sur Internet.</div>
</div>
</div>
</div>




<div class="container">
  <div class="row sinfo">
  
<% content_for :head do %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
<% end %>
<div class="panel panel-default">
<div class="panel-heading"><h2>Inscription </h2></div>
<div class="panel-body">
<div id="stripe_error" class="alert alert-error" style="display:none" >
</div>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'card_form form-vertical' }) do |f| %>
<%= f.error_notification %>
<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
  <legend>
  <h3>Ã‰ditez votre compte </h3>
   </legend>
  <%= display_base_errors resource %>
   <div class="field">
  <%= label_tag :email, "Votre adresse e-mail :"%>
  <%= f.text_field :email, :required => true, class: "form-control", :autofocus => true  %>
  <%= label_tag :password, "Entrez votre mot de passe :" %>
  <%= f.text_field :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, class: "form-control"  %>
  <%= label_tag :password, "Confirmez :" %>
  <%= f.text_field :password_confirmation, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, class: "form-control" %>
    </div> 
    <br>
  <%= f.submit "Valider", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
  <br>
  <br>
  <legend>
  <h5>Supprimer votre compte </h5>
   </legend>

<p> <%= link_to "Supprimer", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>
</div>

</div>
</div>
</div>

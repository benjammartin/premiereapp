<div class="container">
  <div class="row">

<ul class="media-list">
  <li class="media">
    <div class="media-body">
      <% @cgvs.each do |cgv| %>
      <b><h4 class="media-heading"><%= cgv.article %></h4></b>
      <%= raw cgv.body %>
    </div>
    <% if current_user.present? && current_user.role?('admin') %>
    <td><%= link_to 'Show', cgv %></td>
    <td><%= link_to 'Edit', edit_cgv_path(cgv) %></td>
    <td><%= link_to 'Destroy', cgv, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%end%>
    <% end %>
  </li>
</ul>

<% if current_user.present? && current_user.role?('admin') %>
<%= link_to 'New Cgv', new_cgv_path %>
<%end%>